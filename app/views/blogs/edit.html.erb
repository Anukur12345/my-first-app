<h2>Edit a blog:</h2>
<%= form_with scope: :blog, url: user_blog_path(current_user), method: :put do |form| %>
<p>
	<%= form.label :name %><br>
	<%= form.text_field :name %>
</p>
<p>
	<%= form.label :title %><br>
	<%= form.text_field :title %>
</p>
<p>
	<%= form.label :description %><br>
	<%= form.text_field :description %>
</p>
<p>
	<%= form.submit %>
</p>
<% end %>
